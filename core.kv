<LoginScreen>:
    role_voter: role_voter
    role_candidate: role_candidate
    user_id: user_id
    user_password: user_password
	height: 220
	size_hint: 1, None
	padding: 40, 0, 40, 0
	pos_hint: {"center_y":0.55}
    spacing: 10
    cols: 1
    Label:
    	size_hint: 0.5, 0.5
    	background_color: 116, 1, 1, 0.6
    	text: "Kivy Application"
    BoxLayout:
    	size_hint: 0.5, None
    	height: 25
    	spacing: 10
    	ToggleButton:
    	    id: role_voter
    		text: "Voter"
    		group: "role"
    	ToggleButton:
    	    id: role_candidate
    		text: "Candidate"
    		group: "role"
    TextInput:
        id: user_id
        size_hint: 1, None
        height: 25
        border: 0, 2, 0, 2
        font_size: "14sp"
        valign: 'center'
    TextInput:
        id: user_password
        size_hint: 1, None
        height: 25
        border: 0, 2, 0, 2
        font_size: "14sp"
        password: True
    BoxLayout:
    	size_hint: 0.5, 0.5
		Label:
		Button:
		    id: "login"
			size_hint: None, None
			width: 70
			height: 25
    		border: 5, 5, 5, 5
    		background_color: 116, 1, 1, 0.6
    		text: "Login"
    		on_press: root.on_login()
    	Label:
	BoxLayout:
		size_hint: .5, .5
		Label:
		Button:
		    id: "signup"
			text: "create account?"
			width: 120
			height: 25
			size_hint: None,None
			background_color: 1, 1, 1, 0.3
		Label:

<SpinnerOption>:
    size_hint: 1, None
    height: 25
    border: 5, 5, 5, 5

<SignupScreen>:
    orientation: 'vertical'
    padding: 30
    spacing: 0
    Label:
        text: "Create Account"
        bold: True
        text_size: self.size
        valign: "top"
        halign: "left"
        size_hint: 1, None
        height: 30
    GridLayout:
    	cols: 2
    	spacing: 5
    	row_force_default: True
        row_default_height: 25
        Label:
        	text: "Role"
        	text_size: self.size
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	BoxLayout:
    		orientation: "vertical"
    		Spinner:
    			values: "voter", "candidate"
    			size_hint: 1, 0.5
    	Label:
        	text: "ID"
        	text_size: self.size
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	TextInput:
        	text: "value"
        	font_size: "12sp"
    	Label:
        	text: "Password"
        	text_size: cm(1.7), cm(2)
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	TextInput:
        	text: "password"
        	font_size: "12sp"
        	password: True
    	Label:
        	text: "Confirm Password"
        	text_size: cm(1.7), cm(2)
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	TextInput:
        	text: "Button 6"
        	font_size: "12sp"
        	password: True
    Label:
    	text: "User Details"
        bold: True
        text_size: self.size
        valign: "middle"
        halign: "left"
        size_hint: 1, None
        height: 30
    GridLayout:
    	cols: 2
    	spacing: 5
    	row_force_default: True
        row_default_height: 25
    	Label:
        	text: "Name"
        	text_size: self.size
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	Label:
        	text: "Something"
        	text_size: self.size
        	font_size: "12sp"
        	halign: "left"
        	valign: "middle"
    	Label:
        	text: "DOB"
        	text_size: self.size
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	Label:
        	text: "Value"
        	text_size: self.size
        	font_size: "12sp"
        	halign: "left"
        	valign: "middle"
    	Label:
        	text: "Voting Place"
        	text_size: cm(1.6), cm(2)
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	Label:
        	text: "Button 4"
        	text_size: self.size
        	font_size: "12sp"
        	halign: "left"
        	valign: "middle"
    	Label:
        	text: "Address"
        	text_size: self.size
        	font_size: "12sp"
        	bold: True
    		halign: "left"
    		valign: "middle"
        	size_hint_x: None
        	width: 60
    	Label:
        	text: "Button 6"
        	text_size: self.size
        	font_size: "12sp"
        	halign: "left"
        	valign: "middle"
	BoxLayout:
		size_hint: 1, None
		height: 25
		Button:
			text: "verify"
			font_size: "12sp"
			bold: True
		Button:
			text: "create"
			font_size: "12sp"
			bold: True